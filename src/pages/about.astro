---
import { Image } from "astro:assets";
import Dribble from "../icons/dribble.astro";
import Behance from "../icons/behance.astro";
import Github from "../icons/github.astro";
import Linkedin from "../icons/linkedin.astro";
import CV from "../icons/cv.astro";
import Projects from "../icons/projects.astro";
---

<section class="max-w-[60rem] w-full px-6 mt-[20vh]">
  <div class="flex flex-col">
    <div class="flex justify-between items-center">
      <div class="mr-6 animate-fade-down">
        <h3 class="text-l sm:text-2xl md:text-3xl">Hello,</h3>
        <h1 class="font-semibold text-2xl sm:text-4xl md:text-6xl">
          I'm Süha.
        </h1>
        <p class="text-sm sm:text-lg mt-6 mb-1 text-pretty">
          I’m a software engineer specializing in the front end.
        </p>
        <p class="text-sm sm:text-lg">I have a passion for UI/UX designs.</p>
        <ul class="flex mt-6 gap-4">
          <a target="_blank" href="https://github.com/suhatanriverdi/"
            ><Github size="2rem" /></a
          >
          <a target="_blank" href="https://www.linkedin.com/in/suhatanriverdi/"
            ><Linkedin size="2rem" /></a
          >
          <a target="_blank" href="https://dribbble.com/suhatanriverdi"
            ><Dribble size="2rem" /></a
          >
          <a target="_blank" href="https://www.behance.net/suhatanriverdi"
            ><Behance size="2rem" /></a
          >
          <a
            target="_blank"
            href="https://docs.google.com/document/d/1ttzEYc4WCBCYw9ai5HJfP7vsWW0tQe9bPMnXWoaAimA/edit?usp=sharing
      "
            ><CV size="2rem" /></a
          >
        </ul>
      </div>
      <div class="max-w-[10rem] animate-fade-in">
        <Image
          class="w-full h-auto object-contain rounded-3xl shadow-lg dark:shadow-cyan-950 dark:shadow-lg"
          width={120}
          height={120}
          src="/images/profile.png"
          alt="profile"
        />
      </div>
    </div>
    <div class="flex justify-between items-center">
      <a
        href="projects"
        class="transition-all ease-out hover:opacity-100 bg-specialCyan dark:bg-cyan-700 dark:hover:bg-cyan-500 dark:hover:text-white hover:bg-specialCyanLight cursor-pointer select-none shadow-sm py-2 px-6 w-[12rem] flex justify-between items-center rounded-3xl mt-6"
      >
        My Projects
        <Projects size="2rem" />
      </a>
    </div>
  </div>
</section>
